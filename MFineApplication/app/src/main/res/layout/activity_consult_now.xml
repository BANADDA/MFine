<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConsultNow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="What is your Concern?"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="7dp"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_background"
        android:hint="Search for symptoms e.g. fever"
        android:drawableLeft="@drawable/ic_search" />
    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginTop="20dp"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#77b5fe"
           android:textSize="16sp"
           android:text="Most Selected Issues"/>
       <View
           android:layout_width="wrap_content"
           android:layout_height="1.5dp"
           android:layout_marginStart="18dp"
           android:layout_gravity="center"
           android:background="#77b5fe"
           android:layout_marginLeft="18dp" />
   </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMostSelectedIssue"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#77b5fe"
                android:textSize="16sp"
                android:text="Women's Health"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1.5dp"
                android:layout_marginStart="18dp"
                android:layout_gravity="center"
                android:background="#77b5fe"
                android:layout_marginLeft="18dp" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWomenHealth"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#77b5fe"
                    android:textSize="16sp"
                    android:text="Heart Related Problem"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.5dp"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center"
                    android:background="#77b5fe"
                    android:layout_marginLeft="18dp" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHeartRelatedProblems"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#77b5fe"
                android:textSize="16sp"
                android:text="Surgery Related Issue"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1.5dp"
                android:layout_marginStart="18dp"
                android:layout_gravity="center"
                android:background="#77b5fe"
                android:layout_marginLeft="18dp" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSurgeryRelatedIssue"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent" />
    </ScrollView>
</LinearLayout>