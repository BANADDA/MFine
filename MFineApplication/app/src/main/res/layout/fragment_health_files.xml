<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="match_parent"
    tools:context=".HealthFilesFragment">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="14dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/jeff_bezos" />
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilePic"
                    android:layout_marginTop="5dp"
                    android:text="Jeff Bezos"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnMom"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_plus" />

                <TextView
                    android:id="@+id/tvMom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnMom"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Add Mom"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnDad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_plus" />
                <TextView
                    android:id="@+id/tvDad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnDad"
                    android:layout_marginTop="5dp"
                    android:text="Add Dad"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginLeft="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnWife"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_plus" />
                <TextView
                    android:id="@+id/tvWife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnWife"
                    android:layout_marginTop="5dp"
                    android:text="Add Wife"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnDaughter"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_plus" />
                <TextView
                    android:id="@+id/tvDaughter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnDaughter"
                    android:layout_marginTop="5dp"
                    android:text="Add Daughter"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginLeft="30dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnSon"
                    android:src="@drawable/ic_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:id="@+id/tvSon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnSon"
                    android:layout_marginTop="5dp"
                    android:text="Add Son"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnSister"
                    android:src="@drawable/ic_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:id="@+id/tvSister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnSister"
                    android:layout_marginTop="5dp"
                    android:text="Add Daughter"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnBrother"
                    android:src="@drawable/ic_plus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:id="@+id/tvBrother"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnBrother"
                    android:layout_marginTop="5dp"
                    android:text="Add Son"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnHeight"
            android:src="@drawable/ic_plus"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnFeet"
            android:src="@drawable/ic_plus"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnMale"
            android:src="@drawable/ic_plus"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Consultations"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescriptions"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachment and Reports"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remainders"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medical History and Lifestyle"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Subscription"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lab Parameters"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:src="@drawable/ic_explore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>